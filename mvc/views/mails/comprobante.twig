                            <thead style="height: 30px; background-color: #ff7900;">
                                <tr>
                                    <th align="left" >Documentos ORIGINALES</th>
                                    <th>Listo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="background-color:#f5f5f5;">
                                    <td>Acta de Nacimiento</td>
                                    <td align="center"><img src="{{ Core.Domains.theme }}images/checkbox.png" alt="listo"/></td>
