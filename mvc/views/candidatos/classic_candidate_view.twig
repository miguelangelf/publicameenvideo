
{% set months = ["Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre"] %}
{% set extensiones = {'pdf':'fa fa-file-pdf-o', 'doc':'fa fa-file-word-o', 'docx':'fa fa-file-word-o', 'jpg':'fa fa-file-image-o', 'jpeg':'fa fa-file-image-o', 'png':'fa fa-file-image-o', 'bmp':'fa fa-file-image-o', 'gif':'fa fa-file-image-o'} %}

{% include 'profile_header.twig' %}

<div class="mtop mbottom cc-container">
<div class="row candidate-content">
    <div class="col-md-10">
        <div class="tabpanel" id="candidate-tabs">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#cv" aria-controls="home" role="tab" data-toggle="tab">Perfil</a></li>
                <li role="presentation"><a href="#messages" aria-controls="profile" role="tab" data-toggle="tab">Mensajes<span class="badge"></span></a></li>
                <li role="presentation"><a href="#test" aria-controls="messages" role="tab" data-toggle="tab">Psicom&eacute;trico</a></li>
               {% if Data.curriculums %}<li role="presentation"><a href="#curriculum" aria-controls="curriculum" role="tab" data-toggle="tab">Curriculum</a></li>{% endif %}
            </ul>
        </div>
    </div>
    <div class="col-md-2">
        <a href="/candidato/cuenta/index/timeline" class="green switch-label"><span><i class="fa fa-sitemap orange"></i>&nbsp;&nbsp;Timeline</span></a>
    </div>
</div>

<div class="row">
    <div class="col-md-12" style="margin-left: 5px;">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="cv">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Experiencia Profesional</h3>
                    </div>
                    <div class="panel-body job-panel mrg-top">

                        {% for job in Data.jobs %}
                            {% set monthActual = job.startDate|split('-') %}
                            <div class="media">
                                <a class="pull-left" href="#"><div class="position-abv"><h6 class="fa fa-briefcase"></h6></div></a>
                                <div class="media-body">
                                    <h5 class="media-heading">{{ job.position }} en {{ job.company }}</h5>
                                    <p style="color: #aaa;">({{ months[monthActual[0] * 1] }} {{ monthActual[1] }} - {% if job.endDate is empty %} Actual {% else %} {% set monthActualEnd = job.endDate|split('-') %} {{ months[monthActualEnd[0] * 1] }} {{ monthActualEnd[1] }} {% endif %}), {{ job.location }}</p>
                                    {{ job.job_description }}
                                </div>
                            </div>
                        {% else %}
                            <div class="media click-element add-element" onclick="navigatetoSettings(event);">
                                <a class="pull-left" href="#"><div class="position-abv"><h6 class="fa fa-plus"></h6></div></a>
                                <div class="media-body">
                                    <h5 class="media-heading no-data">A&ntilde;adir Concepto</h5>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Estudios</h3>
                    </div>
                    <div class="panel-body edu-panel mrg-top">
                        {% for school in Data.schools %}
                            <div class="media">
                                <a class="pull-left" href="#"><div class="position-abv"><h6 class="fa fa-graduation-cap"></h6></div></a>
                                <div class="media-body">
                                    <h5 class="media-heading">{{ school.degree }}</h5>
                                    <h6 style="font-weight: 500;">{{ school.name }}</h6>
                                    <p style="color: #aaa;">{{ school.startYear }} a {{ school.endYear }}</p>
                                </div>
                            </div>
                        {% else %}
                            <div class="media click-element add-element" onclick="navigatetoSettings(event);">
                                <a class="pull-left" href="#"><div class="position-abv"><h6 class="fa fa-plus"></h6></div></a>
                                <div class="media-body">
                                    <h5 class="media-heading no-data">A&ntilde;adir Concepto</h5>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Habilidades</h3>
                    </div>
                    <div class="panel-body mrg-top">
                        <!-- <div class="col-md-12" style="margin-top: 10px;"> -->
                            {% for skill in Data.skills %}
                                <div class="col-md-3">
                                    <div class="languageView">
                                        <h5 style="font-weight: 600;">{{ skill.skillName }}</h5>
                                        <p style="color: #aaa;">{{ skill.skillLevel }}</p>
                                    </div>
                                </div>
                            {% else %}
                            <div class="col-md-3 double-pdd">
                                <div class="media click-element add-sl" onclick="navigatetoSettings(event);">
                                    <a class="pull-left" href="#"><div class="position-sl"><h6 class="fa fa-plus"></h6></div></a>
                                    <div class="media-body">
                                        <h5 class="media-heading">A&ntilde;adir Concepto</h5>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        <!-- </div> -->
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Idiomas</h3>
                    </div>
                    <div class="panel-body mrg-top">
                        <!-- <div class="col-md-12" style="margin-top: 10px;"> -->
                            {% for language in Data.languages %}
                                <div class="col-md-3">
                                    <div class="languageView">
                                        <h5 style="font-weight: 600;">{{ language.languageName }}</h5>
                                        <p style="color: #aaa;">{{ language.languageLevel }}</p>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-md-3 double-pdd">
                                    <div class="media click-element add-sl" onclick="navigatetoSettings(event);">
                                        <a class="pull-left" href="#"><div class="position-sl"><h6 class="fa fa-plus"></h6></div></a>
                                        <div class="media-body">
                                            <h5 class="media-heading">A&ntilde;adir Concepto</h5>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        <!-- </div> -->
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="messages">
                {% include 'messages.twig' with {'messages': Data.messages, 'view':'classic' } %}
            </div>
            <div role="tabpanel" class="tab-pane" id="test">
                <div class="row">
                    <div class="col-md-4 left-data">
                        <div class="progress barras-progress">
                            <div class="progress-bar progress-bar-theme" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 15%"></div>
                        </div>
                        <span class="areas">15% Administrativo</span><br/>

                        <div class="progress barras-progress">
                            <div class="progress-bar progress-bar-theme" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 65%"></div>
                        </div>
                        <span class="areas">65% Comercial</span><br/>

                        <div class="progress barras-progress">
                            <div class="progress-bar progress-bar-theme" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 85%"></div>
                        </div>
                        <span class="areas">85% Servicio al cliente</span><br/>

                        <div class="progress barras-progress">
                            <div class="progress-bar progress-bar-theme" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                        </div>
                        <span class="areas">100% Operativo</span>
                    </div>
                    <div class="col-md-8">
                        <div id="snake-graph"></div>
                    </div>
                </div>
            </div>
            {% if Data.curriculums %}
                {% include 'candidate_curriculums.twig' %}
            {% endif %}
        </div>
    </div>
</div>
</div>
</div>
<script type="text/javascript" src="{{ Core.Domains.theme }}js/draggable_background.js"></script>
