            tooltip: {
                enabled: false,
                headerFormat: '<b>{series.name}</b><br/>',
                pointFormat: '{point.x} Competencia: {point.y} Evaluacion'
            },
            plotOptions: {
                spline: {
                    marker: {
                        enable: false
                    }
                }
            },
            series: [{
                    lineWidth: 4,
                    color: '#ff7900',
                    data: [
                        [0, 8],
                        [1, 9],
                        [2, 1],
                        [3, 2],
                        [4, 5],
                        [5, 2],
                        [6, 7],
                        [7, 10],
                        [8, 6],
                        [9, 5],
                        [10, 4],
                        [11, 10],
                        [12, 10],
                        [13, 3],
                        [14, 8],
                        [15, 9]
                    ]
                }],
            credits: {enabled: false},
            exporting: {
                enabled: false
            }
        });
    });
</script>