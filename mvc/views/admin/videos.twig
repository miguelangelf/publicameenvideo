<h1>{{Data.inbox}}</h1>



<hr/>

<div class="fullw">    
    <span class="pull-left a80">
        <input type="text" id="buscador" onchange="Comm.search(this);" class="form-control" placeholder="Buscar">
    </span>

    <span class="pull-right a20">

        {% include('opcionesvideos.twig') %}
    </span>
</div >






<div class="padding-top">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>ID</th>  
                <th>Titulo</th>
                <th width="20%">Descripcion</th>
                <th>Categoria</th>
                <th>Empresa</th>
                <th>Usuario</th>
                <th>Estatus</th>
                <th>Eliminar/Bloquear</th>
            </tr>
        </thead>
        <tbody>
            
          
            
            {% for video in Data.videos %}
                <tr>
                    <td>{{ video.id }}</td> 
                    <td><a href="#" onclick="Change.shvideo('{{ video.id }}','{{Data.path}}');" >{{ video.title }}</a></td> 
                    
                    <td>{{ video.description}}</td>
                    <td>{{ video.categoria }}</td>
                    <td>{{ video.company }}</td>
                    <td>{{ video.user }}</td>
                    <td>{{ video.status }}</td>
                    <td><input class="checkbox" mainid="{{video.id}}" value="{{ video.title }}" type="checkbox"></input></td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>







<div class="center">       

    {% include('pager.twig') %}
</div>

<div id="regions_div" style="width:400; height:300"></div>

<div class="a100 ">

    
    {% include('ShowVideo.twig') %}
    
    
    <button type="button" onclick="Change.preparemodal(2);" class="btn btn-primary pull-right" >
        Agregar Video
    </button>
    
    <button type="button" onclick="Change.preparemodal(1);" class="btn btn-primary pull-right" >
        Eliminar Video
    </button>






</div>
