{{Data.auxiliarinfo}}

<form class="form-horizontal">

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
        <div class="col-sm-10 has-feedback">
            <input type="text" name="nombre" outsidename="name" class="form-control frequired ftosend" id="funombre" placeholder="Nombre">
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

        </div> 
    </div>



    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Apellido</label>
        <div class="col-sm-10 has-feedback">
            <input type="text" name="apellido" outsidename="lastname" class="form-control frequired ftosend" id="fuapellido" placeholder="Apellido">
            <span class="glyphicon form-control-feedback " aria-hidden="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Contraseña</label>
        <div class="col-sm-10 has-feedback">
            <input type="password" name="contraseña" outsidename="password" class="form-control fpass1 frequired ftosend"  id="fucon" placeholder="Contraseña">
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Repetir Contraseña</label>
        <div class="col-sm-10 has-feedback">
            <input  type="password" name="repetir contraseña" class="form-control fpass2 frequired" id="fucon2" placeholder="Repetir Contraseña">
            <span  class="ftooltip glyphicon form-control-feedback" aria-hidden="true" ></span>

        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10 has-feedback">
            <input type="email" name="email" outsidename="email" class="form-control femail frequired ftosend" id="fuemail" placeholder="Email">
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </div>
    </div>



    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Cumpleaños</label>
        <div class="col-sm-10 has-feedback">
            <input type="text"  outsidename="birthdate"  class=" form-control frequired ftosend" placeholder="Cumpleaños" name="cumpleaños" id="birthpicker" readonly/>
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Vigencia</label>
        <div class="col-sm-10 has-feedback">
            <input type="text" outsidename="expiration" class="form-control frequired ftosend" placeholder="Vigencia" name="vigencia" id="expirationpicker" readonly>
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" name="sexo" class="col-sm-2 control-label">Sexo</label>
        <div class="col-sm-10 has-feedback">
            <select outsidename="gender" id="fusexo" name="sexo" class="frequired ftosend">
                <option value="1">Masculino</option>
                <option value="2">Femenino</option>
            </select> 
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Rol</label>
        <div class="col-sm-10 has-feedback">
            <select outsidename="role" name="rol" class="frequired ftosend" id="furol">
                {% for arole in Data.role %}

                    <option value="{{ arole.id }}">{{ arole.name }}</option>

                {% endfor %}
            </select> 
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Plan</label>
        <div class="col-sm-10 has-feedback">
            <select outsidename="plan" name="plan" class="frequired ftosend" id="fuplan">
                {% for aplan in Data.plan %}

                    <option value="{{ aplan.id }}">{{ aplan.name }}</option>

                {% endfor %}

            </select>
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Estatus</label>
        <div class="col-sm-10 has-feedback">
            <select outsidename="status" name="estatus" class="frequired ftosend" id="fustatus">

                {% for stat in Data.status %}

                    <option value="{{ stat.id }}">{{ stat.name }}</option>

                {% endfor %}

            </select> 
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>

        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Fotografia</label>

        <span class="btn btn-success fileinput-button col-sm-10 has-feedback">
            <i class="glyphicon glyphicon-plus"></i>
            <span>Seleccionar Fotografia...</span>
            <!-- The file input field used as target for the file upload widget -->
            <input id="fileupload" class="fileupload" type="file" name="files[]" multiple>

            <input outsidename="photo" name="fotografía" value="" class="frequired ftosend ffile" type="hidden" id="photoname" />
            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        </span>

        <br/><br/>
        <div id="progress" class="progress">
            <div class="progress-bar progress-bar-success"></div>
        </div>

    </div>




</div>


</form>

