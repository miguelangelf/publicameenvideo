<form id="teamManager">
	<div class="row form">
		<div class="col-xs-3 text-center">
			<i class="fa fa-plus"></i>
			<i class="fa fa-user"></i>			
		</div>
		<div class="col-xs-9">
			<div class="row">
				<div class="col-xs-6">
					<label>Nombre</label>
					<input type="text" class="form-control" name="user[name]">
				</div>
				<div class="col-xs-6">
					<label>Apellidos</label>
					<input type="text" class="form-control" name="user[last_name]">
				</div>
				<div class="col-xs-12">
					<label>Email</label>
					<input type="text" class="form-control" name="user[email]">
				</div>
			</div>
		</div>
	</div>	
	<div class="row">
		<div class="col-xs-12">
			<hr>
		</div>
		<div class="col-xs-10">
			<span class="alert alert-danger" id="response-saveUser" style="display:none"></span>
		</div>
		<div class="col-xs-2 text-right">
			<button type="button" class="btn" id="saveUser" data-url="{{ Core.Domains.core }}empresa/equipo/saveUser"> Guardar </button>
		</div>		
	</div>
</form>