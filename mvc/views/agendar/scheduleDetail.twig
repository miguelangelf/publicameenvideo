    			<br>
    			<span class="btn fileinput-button white disabled">       
    				<span><i class="fa fa-upload"></i> Cargar</span>
    				<input type="file" name="files[]" class="fileupload">
    			</span>
    		</div>
    	</div>
    	<div class="row">
    		<table class="table table-striped">
		    	<thead class="black">
		    	    <tr>			
		         	   <th class="document_name">Documento</th>
		         	   <th colspan="2">Creado</th>		         	   
		        	</tr>
		    	</thead>
			</table>
