    <li class="active"><a href="#perfil" data-toggle="tab">Perfil del candidato</a></li>	
	<li class=""><a href="#notes" data-toggle="tab" id="notesTab">Notas</a></li>
	<li class=""><a href="#documentos" data-toggle="tab" id="documentsTab">Revisar y subir documentos</a></li>
    <div class="glyphicon glyphicon-remove close" onClick="togglePanel('#panelRight');"></div>
</ul>
<div id="myTabContent" class="tab-content tabs tab-agenda">
	<div id="notes" class="tab-pane fade row">
		<div class="col-xs-10"><textarea name="txt" id="txt" class="form-control"></textarea></div>
		<div class="col-xs-2"><button type="button" id="addNote" class="btn">Agregar</button></div>
		<div class="col-xs-12 table-head-notes table-notes">				
			<table class="table table-striped" id="notesList">
				<thead>
					<tr>
						<th id="note_by">
							Usuario
						</th>
						<th id="note_txt">
							Nota
						</th>
						<th id="note_created">
							Creada
						</th>
					</tr>
				</thead>				
			</table>
		</div>		
		<div id="container_notes" class="col-xs-12 table-notes"></div>
	</div>
    <div class="tab-pane fade" id="documentos">
