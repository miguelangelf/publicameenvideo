<div class="col-md-12" id="slider-experience">
	<div class="list-jobs">
		<div class="media curriculums click-element add-sign" id="addJobBtn">
		  	<a class="pull-left" href="#">
		    	<div class="job-template tbriefcase"><h5 class="glyphicon glyphicon-plus"></h5></div>
		  	</a>
		  	<div class="media-body">
		    	<h4 class="media-heading" style="line-height: 30pt;">Agregar Nueva Experiencia</h4>
		  	</div>
		</div>
	</div>
	<hr />
</div>

	<div class="work-container">
		<form id="profesionalExperience" class="form-horizontal" role="form" method="post">
		  <div class="form-group" style="margin-top: 20px;">
		  	<label for="position" class="col-sm-4 control-label">Posici&oacute;n:*</label>
		  	<div class="col-sm-6">
		    	<input type="text" class="form-control required" id="position" name="position" placeholder="Ej. Desarrollador de Software">
		    </div>
		  </div>
		  <div class="form-group">
		  	<label for="company" class="col-sm-4 control-label">Compa&ntilde;&iacute;a:*</label>
		  	<div class="col-sm-6">
		    	<input type="text" class="form-control" name="company" id="company" placeholder="Ej. TalentProcess">
		    </div>
		  </div>
		  <div class="form-group">
            <label for="industry" class="col-sm-4 control-label">Industria:*</label>
		  	<div class="col-sm-6">
		    	<input type="text" class="form-control" name="industry" id="industry" placeholder="Ej. Gobierno">
		    </div>
          </div>
		  <div class="form-group">
		  	<label for="description" class="col-sm-4 control-label">Descripcion del Trabajo:*</label>
		  	<div class="col-sm-6">
		  		<textarea class="form-control" rows="3" name="job_description"></textarea>
		    </div>
		  </div>
		  <div class="form-group">
		  	<label for="senior_level" class="col-sm-4 control-label">Nivel de Experiencia:*</label>
		  	<div class="col-sm-6">
			  	<select class="form-control" name="senior_level">
			  	  <option>Selecciona</option>
				  <option value="consejero">Consejero</option>
				  <option value="presidente">Presidente</option>
				  <option value="vicepresidente">Vicepresidente</option>
				  <option value="director">Director</option>
				  <option value="gerente">Gerente</option>
				  <option value="coordinador">Coordinador</option>
				  <option value="ejecutivo">Ejecutivo sin gerente a cargo</option>
				  <option value="becario">Becario</option>
				</select>
		  	</div>
		  </div>
		  <div class="form-group">
            <label for="id_country" class="col-sm-4 control-label">Pais:*</label>
            <div class="col-md-6">
              <select name="id_country" id="search-select" onchange="changeCountryforCity(event, this);">
                {% for key, country in Data.countries %}
                  <option value="{{ key }}">{{ country|raw }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="id_city" class="col-sm-4 control-label">Ciudad:*</label>
            <div class="col-md-6">
              <select name="id_city" id="search-select-city">
                {% for item in Data.cities %}
                	{% for k, city in item %}
                		<option value="{{k}}">{{city}}</option>     
                	{% endfor %}              
                {% endfor %}
              </select>
            </div>
          </div>
          <!-- ******** -->

		  <div class="form-group">
		  	<label for="company_size" class="col-sm-4 control-label">Fecha de Inicio:*</label>
		  	<div class="col-sm-3">
			  	<select class="form-control" name="startMonth">
			  	  <option value="">Selecciona</option>
				  <option value="01">Enero</option>
				  <option value="02">Febrero</option>
				  <option value="03">Marzo</option>
				  <option value="04">Abril</option>
				  <option value="05">Mayo</option>
				  <option value="06">Junio</option>
				  <option value="07">Julio</option>
				  <option value="08">Agosto</option>
				  <option value="09">Septiembre</option>
				  <option value="10">Octubre</option>
				  <option value="11">Noviembre</option>
				  <option value="12">Diciembre</option>
				</select>
			</div>
			<div class="col-sm-3">
				<select class="form-control" name="startYear" id="startYear"></select>
				<!-- <input type="text" class="form-control" id="startYear" name="startYear" placeholder="año" maxlength="4" /> -->
			</div>
		  </div>

		  <div class="form-group">
		    <div class="col-sm-offset-tactual col-sm-6">
		      <div class="checkbox" style="margin-left: 20px;">
		        <label style="margin-left: 2px; line-height: 20pt;">
		        	<input type="checkbox" name="current" id="current" onchange="hideEndDate(this);" /> Trabajo Actual
		        </label>
		      </div>
		    </div>
		  </div>

		  <div class="form-group" id="endDate">
		  	<label for="company_size" class="col-sm-4 control-label">Fecha de T&eacute;rmino:</label>
		  	<div class="col-sm-3">
			  	<select class="form-control" name="endMonth">
			  	  <option value="">Selecciona</option>
				  <option value="01">Enero</option>
				  <option value="02">Febrero</option>
				  <option value="03">Marzo</option>
				  <option value="04">Abril</option>
				  <option value="05">Mayo</option>
				  <option value="06">Junio</option>
				  <option value="07">Julio</option>
				  <option value="08">Agosto</option>
				  <option value="09">Septiembre</option>
				  <option value="10">Octubre</option>
				  <option value="11">Noviembre</option>
				  <option value="12">Diciembre</option>
				</select>
			</div>
			<div class="col-sm-3">
				<select class="form-control" name="endYear" id="endYear"></select>
				<!-- <input type="text" class="form-control" id="endYear" name="endYear" placeholder="año" maxlength="4"/> -->
			</div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-exp col-sm-6">
		      <button id="experienceFormBtn" data-loading-text="Guardando..." onclick="saveWork(event, this);" class="btn btn-theme">Guardar</button>
		    </div>
		  </div>
		</form>
