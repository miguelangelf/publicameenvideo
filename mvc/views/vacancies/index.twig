<section class="content">
	<div class="row">
		<div class="col-xs-10 vacancies-number">
			<span>{{Data.total_rows}} </span> Vacantes
		</div>
		<div class="col-xs-2">
			<div class="btn-talentbase" id="newVacancy"> Nueva Vacante</div>
		</div>
	</div>
	<div class="tableminheight">
		<table class="table table-striped table-hover" id="vacanciesTable">      	
			<thead>
				<tr>
					<th class="rec-picture">Reclutador</th>
					<th class="revised-status"></th>
					<th>Posición</th>
					<th>Ubicación</th>
					<th class="created-date">Frecha de creación</th>
					<th class="candidates-number">Candidatos</th>
					<th class="actions">Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for item in Data.vacancies.rows %}
				<tr>
					<td class="rec-picture">
						{% set user_picture = item.picture ? Core.Domains.core ~ 'empresa/admin/companyUserPicture/' ~ item.uid : Core.Domains.theme ~ "images/default-user-picture.png" %}
						<img src="{{user_picture}}" class="img-thumbnail img-circle rec-picture" data-toggle="tooltip" data-placement="bottom" title="{{ item.name ~ ' ' ~ item.last_name}}">
					</td>
					<td class="revised-status">
						<span class="{% if item.revised %}vacancy-revised{% else %}vacancy-no-revised{% endif %}"></span>
					</td>
					<td>
						<span vacancy-id="{{item.id}}" class="position-name" vacancy-name="{{item.position}}">{{item.position}}</span>
						<br>
						{{item.department}}
					</td>
					<td>
						{% if item.city_name != '' %}
							<strong>{{item.city_name}}</strong>
							<br>
						{% endif %}
						{% if item.subdivision_1_name != '' %}						
							{{item.subdivision_1_name}}
							<br>
						{% endif %}
						{% if item.country_name != '' %}
							{{item.country_name}}
							<br>
						{% endif %}
						{% if item.zip_code != '' %}CP: {{item.zip_code}} {% endif %}
					</td>
					<td class="created-date">
						<div>
							<i class="fa fa-calendar"></i>
							<br>
							<section>{{item.created|date('d/m/Y')}}</section>
						</div>
					</td>
					<td class="candidates-number"> 
						<div>
							<i class="fa fa-users"></i>
							<br>
							<section><span>75</span> Candidatos</section>
						</div>
					</td>
					<td>
						<label class="btn {% if item.uid_manager != Data.logged_user and Data.role != 8 %}disabled{% endif %}">
							<input type="checkbox" name="" value="" {% if item.published == 1 %}checked="checked"{% endif %}>
							<label class="publish-vacancy-btn" vacancy-id="{{item.id}}">Publicar</label>
						</label>
						<button type="button"  vacancy-id="{{item.id}}" class="vacancy-btn btn {% if item.uid_manager != Data.logged_user and Data.role != 8 %}disabled{% endif %}" vacancy-name="{{item.position}}">
							<i class="fa fa-pencil"></i>&nbsp;&nbsp;&nbsp;Editar
						</button>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table> 
	</div>
	<div class="panel-footer">{% include('pagination.twig') %}</div>  
</section>